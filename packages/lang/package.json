{
	"name": "@glisp/lang",
	"author": "Baku Hashimoto <mail@baku89.com> (https://baku89.com)",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "npm run build:tsc; npm run build:peggy",
		"build:tsc": "tsc",
		"build:peggy": "peggy -o ./lib/parser/parser.peg.js -o ./src/parser/parser.peg.js --format umd ./src/parser/parser.pegjs",
		"lint": "eslint src",
		"test": "npm run build:peggy; jest --slient=false",
		"serve": "npm run test -- --watch",
		"repl": "npm run build; node ./lib/repl/index.js",
		"prepare": "npm run build"
	},
	"typings": "./lib/index.d.ts",
	"bin": {
		"glisp": "./bin/glisp"
	},
	"license": "MIT",
	"dependencies": {
		"lodash": "^4.17.21"
	},
	"devDependencies": {
		"@types/jest": "^27.0.2",
		"@types/lodash": "^4.14.176",
		"@typescript-eslint/eslint-plugin": "^4.28.2",
		"@typescript-eslint/parser": "^4.28.2",
		"eslint": "^7.30.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-unused-imports": "^1.1.2",
		"jest": "^27.2.4",
		"jest-runner-eslint": "^1.0.0",
		"peggy": "^1.2.0",
		"prettier": "^2.3.2",
		"ts-jest": "^27.0.5",
		"ts-node": "^10.3.0",
		"typescript": "^4.4.2"
	},
	"jest": {
		"projects": [
			{
				"preset": "ts-jest",
				"testEnvironment": "node",
				"passWithNoTests": true
			},
			{
				"runner": "jest-runner-eslint",
				"displayName": "lint",
				"testMatch": [
					"<rootDir>/src/**/*.ts"
				],
				"transform": {
					"^.+\\.(t|j)s$": "ts-jest"
				}
			}
		]
	}
}
