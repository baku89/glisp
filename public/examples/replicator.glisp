;; Example: Replicator

(defn path/replicator
  [xform n path]
  (->> (reduce #(conj % (mat2d/* (last %) xform))
               [(mat2d/ident)]
               (range (dec n)))
       (map #(path/transform % path))))

:start-sketch

(background "#08101D")

(style (stroke "#CECCFF" 1)

       (path/replicator
        (mat2d/* (translate [30 -24])
                 (rotate (deg 10))
                 (scale [0.95 0.95]))
        60
        (circle [0 0] 150)))