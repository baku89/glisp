@import '../style/common.styl'

use-number()
	position relative
	color var(--constant)
	font-monospace()

	&__input
		input()
		width 100%
		text-align right
		cursor default

		~/.tweaking &
			box-shadow 0 0 0 1px var(--highlight)

		&:focus
			cursor text
			pointer-events auto

	&__overlay
		cursor ew-resize

	&.exp
		color var(--red)

	&.grayed-out
		color var(--comment)