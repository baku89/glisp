@import '../style/common.styl'

use-number()
	position relative
	color var(--base05)
	font-monospace()

	&__input
		input()
		padding 0 0.4em
		width 100%
		text-align right
		cursor default

		~/.tweaking &
			box-shadow 0 0 0 1px var(--highlight)

		&:focus
			cursor text
			pointer-events auto

	&__overlay
		cursor ew-resize
		input-overlay()

	&.exp
		color var(--red)

	&.grayed-out
		color var(--base03)