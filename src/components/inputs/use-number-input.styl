@import '../style/common.styl'

use-number()
	position relative
	color var(--base06)
	font-monospace()

	&__input
		input()
		padding 0 0.4em
		width 100%
		text-align right
		cursor col-resize

		~/.tweaking &
			box-shadow 0 0 0 1px var(--accent)

		&:focus
			cursor text
			pointer-events auto

	&__overlay
		input-overlay()

	&__overlay-label
		tooltip()
		z-index 1001
		cursor none
		transform translate(-50%, -50%)
		font-monospace()
		position fixed

		&:before, &:after
			position absolute
			top 50%
			display block
			width 1.8em
			text-align center
			font-weight normal
			transform translateY(-50%)

		&:before
			right 100%
			content '<'

		&:after
			left 100%
			content '>'