
app()
	background base16('00')
	color base16('04')

font-monospace()
	font-family 'Fira Code', monospace
	font-variant-ligatures contextual

font-title()
	font-family 'Inter', "Yu Gothic", "游ゴシック", YuGothic, "游ゴシック体", sans-serif
	font-weight 400

font-ui()
	font-family 'Fira Sans', 'Helvetica Neue', Helvetica, Arial, "Yu Gothic", "游ゴシック", YuGothic, "游ゴシック体", sans-serif

font-text()
	font-ui()

font-numeric()
	font-ui()
	font-variant-numeric tabular-nums

base16(name, opacity = 1)
	varName = '--base' + name

	if (name == 'accent')
		varName = '--accent'

	if (opacity == 1)
		unquote('rgb(var(' + varName + '))')
	else
		unquote('rgba(var(' + varName + '), ' + opacity + ')')

$color-frame = unquote('rgba(var(--base05), 0.2)')
$input-height = 1.8em
$subcontrol-height = 1.4em
$subcontrol-margin = (($input-height - $subcontrol-height) / 2em)
$input-horiz-margin = 0.6em
$input-round = 2px
$popup-round = 4px

input-transition($prop = all)
	transition $prop 0.1s ease

input()
	width 6em
	height $input-height
	border 1px solid transparent
	border-radius $input-round
	background base16('01')
	color inherit
	font-size inherit

	input-transition(border-color)
		/* Chrome, Safari, Edge, Opera */

	&::-webkit-outer-spin-button, &::-webkit-inner-spin-button
		margin 0
		-webkit-appearance none

	/* Firefox */
	&[type=number]
		-moz-appearance textfield

	&:hover, &:focus
		border-color base16('accent')
		color base16('06')

	&:focus.invalid
		border-color base16('0B')
		box-shadow 0 0 0 1px base16('0B')

	&:focus
		box-shadow 0 0 0 1px base16('accent')

input-border()
	border 1px solid transparent
	border-radius $input-round
	input-transition(border-color)

	&:hover
		border-color base16('accent')

	&:focus
		border-color base16('accent')

input-overlay()
	position fixed
	top 0
	left 0
	z-index 1000
	width 100%
	height 100%

	.thin, .bold, .extra-bold
		fill none
		stroke base16('accent')
		stroke-linecap butt

	.thin
		stroke-width 1

	.bold
		stroke-width 2

	.extra-bold
		stroke-width 4

	.dashed
		fill none
		stroke $color-frame
		stroke-width 1

	.label
		font-size 1em
		font-numeric()
		fill base16('accent')

absolute-fill()
	position absolute
	display block
	inset 0

pseudo-block()
	position absolute
	display block
	content ''

glass-bg(mode)
	if (mode == 'pane')
		background base16('00', 0.9)
		backdrop-filter blur(16px)
	else if (mode == 'float')
		background base16('00', 0.7)
		backdrop-filter blur(3px)

tooltip()
	padding 0.4em
	border-radius $popup-round
	color base16('06')
	transition opacity 0.1s ease
	glass-bg('float')

labeled-button()
	padding-top 0.2em
	height $subcontrol-height
	border-radius $input-round
	background base16('02')
	color base16('00')
	font-size 0.9em
	input-transition(all)

	&:hover, &:focus
		background base16('accent')

background-checkerboard(size = 4px)
	background-color white
	background-image linear-gradient(45deg, #ddd 25%, transparent 25%), linear-gradient(135deg, #ddd 25%, transparent 25%), linear-gradient(45deg, transparent 75%, #ddd 75%), linear-gradient(135deg, transparent 75%, #ddd 75%)
	background-position 0 0, size 0, size (-1 * size), 0px size
	background-size 2 * size 2 * size