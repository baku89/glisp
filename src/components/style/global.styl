@import url('https://cdn.jsdelivr.net/gh/tonsky/FiraCode@5.2/distr/fira_code.css')
@import url('https://fonts.googleapis.com/css2?family=Lato:wght@700&display=swap')
@import 'common.styl'

::-webkit-scrollbar
	width 0.6em
	height 0

// Track
::-webkit-scrollbar-track
	display none

// Handle
::-webkit-scrollbar-thumb
	border-radius 0
	background var(--frame)

::selection
	background var(--frame)

*, ::after, ::before
	box-sizing border-box
	outline none
	-webkit-tap-highlight-color transparent

*
	margin 0
	padding 0
	list-style none

html
	font-size 12px
	font-ui()
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

h1, h2, h3, h4, h5, h6
	font-title()
	margin-bottom 1em

h2
	font-size 1.7em

button
	outline none
	border none
	background none
	cursor pointer
	user-select none

p
	margin 1em 0

/* Splitpanes */
.splitpanes
	&.glisp-theme
		&.splitpanes--vertical
			& > .splitpanes__pane
				overflow scroll
				padding 1.8em

			& > .splitpanes__splitter
				position relative
				z-index 1
				margin 0 -0.6em
				padding 0
				min-width calc(1px + 1.2em)
				border-right 0.6em solid transparent
				border-left 0.6em solid transparent
				background-color var(--frame)
				background-clip padding-box
				input-transition()

				&:hover
					border-color var(--frame)
					background-color var(--base07)

				&:before, &:after
					position absolute
					top 50%
					pointer-events none
					font-monospace()
					margin-top -0.5em
					width 2em
					height 1em
					color var(--base07)
					line-height 1em
					opacity 0
					input-transition()

				&:before
					right 0
					content '<<'
					text-align right

				&:hover:before, &:hover:after
					opacity 1

				&:hover:before
					transform translateX(-50%)

				&:after
					left 0
					content '>>'

				&:hover:after
					transform translateX(50%)